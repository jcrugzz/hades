#!/usr/bin/env node

var nconf = require('nconf');
var Hades = require('../');

nconf
  .env('_')
  .argv({
    help:   { alias: 'h' },
    port:   { alias: 'p' },
    config: { alias: 'c' }
  });

nconf.defaults({
  port: 4444,
  config: 'config/development.json'
});

nconf.file(nconf.get('config'));

if (nconf.get('help')) {
  console.log([
    'usage: rackspacer [options]\n',
    'options:',
    '  -p, --port   Port to chill on',
    '  -c, --config Config file to use',
    '  -h, --help   O HAI THERE!'
  ].join('\n') + '\n');
  process.exit();
}

var pkgcloud = nconf.get('pkgcloud');

//
//
//
var hades = new Hades({
  pkgcloud: pkgcloud
});

//
// Log Errors to console so we know what may be going on
//
hades.on('error', function (err) {
  console.log(err)
});

var port = nconf.get('port');

hades.listen(port, function () {
  console.log('Listening on port: ' + port);
});
